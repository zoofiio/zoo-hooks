# Network selection
NETWORK=sepolia

# RPC endpoints
RPC_URL_SEPOLIA=https://sepolia.infura.io/v3/your_infura_key
RPC_URL_MAINNET=https://mainnet.infura.io/v3/your_infura_key

# Private keys
PRIVATE_KEY=your_private_key_here

# Pool Manager addresses for different networks
# You can set these per network or use POOL_MANAGER_ADDRESS to override
POOL_MANAGER_SEPOLIA=0xE03A1074c86CFeDd5C142C4F04F1a1536e203543
POOL_MANAGER_MAINNET=0x000000000004444c5dc75cB358380D2e3dE08A90
# Direct Pool Manager override (takes precedence if set)
# POOL_MANAGER_ADDRESS=0xE03A1074c86CFeDd5C142C4F04F1a1536e203543

# Etherscan API keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key